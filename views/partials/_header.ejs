<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!username) { %>
    <form class="form-inline" action="/urls/login" method="POST">
      <label for="username">Sign In:</label>
      <input class="form-control" type="text" name="username" placeholder="Hilary Swank" style="width: 350px; margin: 1em">
      <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
    <% } else { %>
    <div class="collapse navbar-collapse text-white"><h4>Welcome! <%= username %> </h4></div>
    <form class="form-inline" method="POST" action="/urls/logout"><input type="submit" class="btn btn-warning" value="Sign Out"></form>
    <% } %>
  </nav>
</header>
